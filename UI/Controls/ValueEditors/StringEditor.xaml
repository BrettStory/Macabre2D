<common:NamedValueEditor x:Class="Macabre2D.UI.Controls.ValueEditors.StringEditor"
                         x:Name="_stringEditor"
                         x:TypeArguments="system:String"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:common="clr-namespace:Macabre2D.UI.Common;assembly=Macabre2D.UI.Common"
                         xmlns:system="clr-namespace:System;assembly=mscorlib">
    <Grid DataContext="{Binding ElementName=_stringEditor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0"
                   FontWeight="Bold"
                   Text="{Binding Title}"
                   VerticalAlignment="Center" />

        <TextBox Grid.Column="1"
                 Text="{Binding Value}" />
    </Grid>
</common:NamedValueEditor>