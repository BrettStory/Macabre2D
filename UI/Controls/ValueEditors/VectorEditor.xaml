<local:NamedValueEditor x:Class="Macabre2D.UI.Controls.ValueEditors.VectorEditor"
                        x:Name="_vectorEditor"
                        x:TypeArguments="monoGame:Vector2"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:local="clr-namespace:Macabre2D.UI.Controls.ValueEditors"
                        xmlns:monoGame="clr-namespace:Microsoft.Xna.Framework;assembly=MonoGame.Framework">
    <Grid DataContext="{Binding ElementName=_vectorEditor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0"
                   FontWeight="Bold"
                   Text="{Binding Title}"
                   VerticalAlignment="Center" />

        <TextBlock Grid.Column="1"
                   Text="X: "
                   VerticalAlignment="Center" />

        <TextBox Grid.Column="2"
                 Text="{Binding X}" />

        <TextBlock Grid.Column="3"
                   Text="Y: "
                   VerticalAlignment="Center" />

        <TextBox Grid.Column="4"
                 Text="{Binding Y}" />
    </Grid>
</local:NamedValueEditor>