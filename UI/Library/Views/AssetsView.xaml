<UserControl x:Class="Macabre2D.UI.Library.Views.AssetsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Macabre2D.UI.Library.Controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height=".4*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height=".6*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal">
            <Button Command="{Binding NewFolderCommand}"
                    CommandParameter="{Binding AssetService.SelectedAsset}"
                    ToolTip="Adds a folder.">
                <iconPacks:PackIconMaterial Kind="{x:Static iconPacks:PackIconMaterialKind.FolderPlus}"
                                            Foreground="{StaticResource BlackBrush}" />
            </Button>
            <Button Command="{Binding AddAssetCommand}"
                    CommandParameter="{Binding AssetService.SelectedAsset}"
                    ToolTip="Adds an asset under the currently selected folder.">
                <iconPacks:PackIconMaterial Kind="{x:Static iconPacks:PackIconMaterialKind.FilePlus}"
                                            Foreground="{StaticResource BlackBrush}" />
            </Button>
            <Button Command="{Binding ImportAssetCommand}"
                    CommandParameter="{Binding AssetService.SelectedAsset}"
                    ToolTip="Imports an asset under the currently selected folder.">
                <iconPacks:PackIconMaterial Kind="{x:Static iconPacks:PackIconMaterialKind.FileImport}"
                                            Foreground="{StaticResource BlackBrush}" />
            </Button>
            <Button Command="{Binding DeleteAssetCommand}"
                    CommandParameter="{Binding AssetService.SelectedAsset}"
                    ToolTip="Deletes the selected asset from the project, including all children if the item is a folder. You cannot undo this action.">
                <iconPacks:PackIconMaterial Kind="{x:Static iconPacks:PackIconMaterialKind.Delete}"
                                            Foreground="{StaticResource BlackBrush}" />
            </Button>
        </StackPanel>

        <controls:AssetBrowser Margin="{StaticResource StandardMarginTB}"
                               Grid.Row="1"
                               IsEditable="True"
                               RootAsset="{Binding ProjectService.CurrentProject.AssetFolder}"
                               AssetDoubleClickedCommand="{Binding OpenSceneCommand}"
                               SelectedAsset="{Binding AssetService.SelectedAsset, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <GridSplitter Grid.Row="2"
                      Style="{StaticResource HorizontalGridSplitter}" />

        <ScrollViewer Grid.Row="3"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Visible">
            <controls:AssetEditorControl Asset="{Binding AssetService.SelectedAsset, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
        </ScrollViewer>
    </Grid>
</UserControl>