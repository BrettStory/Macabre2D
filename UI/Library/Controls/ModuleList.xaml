<UserControl x:Class="Macabre2D.UI.Library.Controls.ModuleList"
             x:Name="_moduleList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:Macabre2D.UI.Library.Controls">
    <Grid DataContext="{Binding ElementName=_moduleList}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal">
            <Button Command="{Binding AddModuleCommand}"
                    ToolTip="Adds a module to the scene.">
                <iconPacks:PackIconMaterial Kind="Plus"
                                            Foreground="{StaticResource BlackBrush}" />
            </Button>
            <Button Command="{Binding RemoveModuleCommand}"
                    ToolTip="Removes the module from the scene.">
                <iconPacks:PackIconMaterial Kind="Minus"
                                            Foreground="{StaticResource BlackBrush}" />
            </Button>
        </StackPanel>

        <ListBox Grid.Row="1"
                 Margin="{StaticResource StandardMarginAll}"
                 ItemsSource="{Binding Modules}"
                 SelectedItem="{Binding SelectedModule}"
                 SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:EditableListBoxItemControl AllowUndo="True"
                                                      Text="{Binding Path=Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                      ValidTypes="{Binding ValidTypes, ElementName=_componentHierarchy, Mode=OneWay}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>