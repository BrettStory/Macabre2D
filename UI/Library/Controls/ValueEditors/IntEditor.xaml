<local:NamedValueEditor x:Class="Macabre2D.UI.Library.Controls.ValueEditors.IntEditor"
                        x:Name="_intEditor"
                        x:TypeArguments="system:Int32"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:local="clr-namespace:Macabre2D.UI.Library.Controls.ValueEditors"
                        xmlns:system="clr-namespace:System;assembly=mscorlib">
    <Grid DataContext="{Binding ElementName=_intEditor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0"
                   FontWeight="Bold"
                   Text="{Binding Title}"
                   VerticalAlignment="Center" />

        <TextBox Grid.Column="1"
                 Text="{Binding ValueWrapper}" />
    </Grid>
</local:NamedValueEditor>