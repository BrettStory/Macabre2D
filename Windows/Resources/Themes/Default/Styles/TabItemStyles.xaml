<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls">
    <Style TargetType="TabItem" BasedOn="{StaticResource MetroTabItem}" x:Key="HeaderTabItem">
        <Setter Property="metro:ControlsHelper.HeaderFontSize" Value="18" />
        <Setter Property="Padding" Value="{StaticResource StandardMarginLR}" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <Style TargetType="TabItem" BasedOn="{StaticResource MetroTabItem}" x:Key="SmallTabItem">
        <Setter Property="metro:ControlsHelper.HeaderFontSize" Value="14" />
        <Setter Property="Margin" Value="0" />
    </Style>
</ResourceDictionary>