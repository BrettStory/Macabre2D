<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Authors>Brett Story</Authors>
    <Company>Comet Overdrive</Company>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <RepositoryUrl>https://github.com/BrettStory/Macabre2D.Framework</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageProjectUrl>https://github.com/BrettStory/Macabre2D.Framework</PackageProjectUrl>
    <AssemblyVersion>0.3.12.0</AssemblyVersion>
    <FileVersion>0.3.12.0</FileVersion>
    <Version>0.3.12</Version>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>logo128.png</PackageIcon>
    <PackageTags>MonoGame, Game, XNA</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <NoWarn>NU1701</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\CommonAssemblyInfo.cs" Link="Properties\CommonAssemblyInfo.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\Art\logo128.png" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MonoGame.Framework.Content.Pipeline.Portable" Version="3.7.1.189" PrivateAssets="All" />
    <PackageReference Include="MonoGame.Framework.Portable" Version="3.7.1.189" PrivateAssets="All" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Audio\Synthesizer\" />
  </ItemGroup>
</Project>