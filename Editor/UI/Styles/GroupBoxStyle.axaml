<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style Selector="HeaderedContentControl.GroupBox">
		<Style.Resources>
			<Thickness x:Key="GroupBoxBorderMargin">8,8,8,8</Thickness>
			<Thickness x:Key="GroupBoxTextMargin">16,0,8,0</Thickness>
		</Style.Resources>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Grid RowDefinitions="Auto, *"
					      ColumnDefinitions="Auto, *"
					      Margin="{StaticResource StandardMarginAll}">
						<Border Grid.Row="0"
						        Grid.Column="0"
						        Grid.RowSpan="2" 
						        Grid.ColumnSpan="2"
						        Margin="{StaticResource GroupBoxBorderMargin}"
						        Padding="{StaticResource GroupBoxBorderMargin}"
						        BorderBrush="{StaticResource ThemeBorderLowBrush}"
						        BorderThickness="{StaticResource ThemeBorderThickness}">
							<ContentPresenter Content="{TemplateBinding Content}" />
						</Border>
						
						<Border Grid.Row="0"
						        Grid.Column="0"
						        Padding="{StaticResource DoubleMarginHorizontal}" 
						        Background="{StaticResource ThemeBackgroundBrush}" 
						        Margin="{StaticResource GroupBoxTextMargin}">
							<TextBlock Text="{TemplateBinding Header}" />
						</Border>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</Styles>