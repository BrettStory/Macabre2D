<local:ValueEditorControl xmlns="https://github.com/avaloniaui"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:framework="clr-namespace:Macabresoft.Macabre2D.Framework;assembly=Macabre2D.Framework"
                          xmlns:local="clr-namespace:Macabresoft.Macabre2D.Editor.UI.Controls.ValueEditors"
                          x:TypeArguments="framework:Layers"
                          x:Class="Macabresoft.Macabre2D.Editor.UI.Controls.ValueEditors.LayersEditor">
    <Grid ColumnDefinitions="Auto, *">
        <TextBlock Grid.Column="0"
                   FontWeight="Bold"
                   Text="{Binding $parent[local:LayersEditor].Title}"
                   VerticalAlignment="Top" />

        <local:FlagsEnumEditor Grid.Column="1"
                               EnumType="{x:Type framework:Layers}"
                               Value="{Binding $parent[local:LayersEditor].Value, Mode=TwoWay}"/>
        
