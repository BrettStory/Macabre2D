<local:ValueEditorControl xmlns="https://github.com/avaloniaui"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:converters="clr-namespace:Macabresoft.Macabre2D.Editor.UI.Converters"
                          xmlns:local="clr-namespace:Macabresoft.Macabre2D.Editor.UI.Controls.ValueEditors"
                          xmlns:system="clr-namespace:System;assembly=mscorlib"
                          x:TypeArguments="system:Single"
                          x:Class="Macabresoft.Macabre2D.Editor.UI.Controls.ValueEditors.FloatEditor"
                          UpdateOnLostFocus="False">
    <local:ValueEditorControl.Resources>
        <converters:InverseIsStringNullOrEmptyConverter x:Key="InverseIsStringNullOrEmptyConverter" />
    </local:ValueEditorControl.Resources>
    <Grid ColumnDefinitions="Auto, *">
        <TextBlock Grid.Column="0"
                   FontWeight="Bold"
                   Text="{Binding $parent[local:FloatEditor].Title}"
                   VerticalAlignment="Center"
                   IsVisible="{Binding $parent[local:FloatEditor].Title, Converter={StaticResource InverseIsStringNullOrEmptyConverter}}"/>

        <TextBox Grid.Column="1"
                 Text="{Binding $parent[local:FloatEditor].ValueDisplay}"
                 LostFocus="ValueDisplay_OnLostFocus"/>
    </Grid>
</local:ValueEditorControl>