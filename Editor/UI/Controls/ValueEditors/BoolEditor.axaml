<local:ValueEditorControl xmlns="https://github.com/avaloniaui"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:local="clr-namespace:Macabresoft.Macabre2D.Editor.UI.Controls.ValueEditors"
                          xmlns:system="clr-namespace:System;assembly=mscorlib"
                          x:TypeArguments="system:String"
                          x:Class="Macabresoft.Macabre2D.Editor.UI.Controls.ValueEditors.BoolEditor">
    <CheckBox Content="{Binding $parent[local:BoolEditor].Title}"
              IsChecked="{Binding $parent[local:BoolEditor].Value}"/>
</local:ValueEditorControl>