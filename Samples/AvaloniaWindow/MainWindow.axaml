<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:monoGame="clr-namespace:Macabresoft.MonoGame.AvaloniaUI;assembly=Macabresoft.MonoGame.AvaloniaUI"
		Name="_window"
        x:Class="Macabresoft.MonoGame.Samples.AvaloniaWindow.MainWindow"
        Title="Macabresoft.MonoGame.Samples.AvaloniaWindow">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<Border Grid.Column="0"
				Background="Black"
				Width="256" />

		<monoGame:MonoGameSurfaceDX Grid.Column="1"
									DataContext="{Binding MonoGameViewModel, ElementName=_window, Mode=OneTime}"
									HorizontalAlignment="Stretch"
									VerticalAlignment="Stretch" />
	</Grid>
</Window>